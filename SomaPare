import java.util.Scanner;

public class SomaPare {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        int[] numeros = new int[4];  // vetor para armazenar 4 números
        int somaPares = 0;           // variável para soma dos pares
        int i = 0;

        while (i < 4) {
            try {
                System.out.print("Digite o número " + (i + 1) + ": ");
                numeros[i] = Integer.parseInt(scanner.nextLine());

                // Verifica se o número é par
                if (numeros[i] % 2 == 0) {
                    somaPares += numeros[i];
                }

                i++; // só avança se for válido

            } catch (NumberFormatException e) {
                System.out.println("Erro: Digite apenas números inteiros!");
            }
        }

        System.out.println("\nSoma dos números pares: " + somaPares);

        scanner.close();
    }
}